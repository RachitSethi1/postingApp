<% layout('layouts/boilerplate') %>

<a href="/posts/<%= foundPost._id %>">Back</a>

<form action="/posts/<%= foundPost._id %>?_method=PATCH" method="POST">
	<label for="title">Title:</label>
	<input type="text" name="post[title]" id="title" value="<%= foundPost.title %>">

	<label for="description">Description:</label>
	<input type="text" name="post[description]" id="description" value="<%= foundPost.description %>">

	<button>Edit Post</button>
</form>

<form action="/posts/<%= foundPost._id %>?_method=DELETE" method=POST>
	<button>Delete Post</buton>
</form